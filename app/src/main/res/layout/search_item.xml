<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/search_item_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/dp_ten"
    android:orientation="horizontal">

    <com.takeout.client.view.RoundCornerImageView
        android:id="@+id/search_item_icon"
        android:layout_width="@dimen/dp_fifty"
        android:layout_height="@dimen/dp_fifty"
        android:layout_marginLeft="@dimen/dp_ten"
        android:scaleType="centerCrop"
        android:src="@mipmap/collect_icon" />
    <TextView
        android:id="@+id/search_item_shop_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_ten"
        android:layout_gravity="center_vertical"
        android:text="多娜之 - 大安店"
        android:textColor="@color/text_drark_black"
        android:textSize="@dimen/sp_sixteen" />
</LinearLayout>
