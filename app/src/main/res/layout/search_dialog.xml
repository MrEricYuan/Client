<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/search_dialog_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_two_hundred"
        android:layout_marginLeft="@dimen/dp_twenty_four"
        android:layout_marginRight="@dimen/dp_twenty_four"
        android:layout_marginTop="@dimen/dp_hundred">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp_eight">

            <com.takeout.client.view.RoundCornerImageView
                android:id="@+id/collect_item_bg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@mipmap/collect_bg" />

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/cover" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_fifteen"
                android:layout_marginRight="@dimen/dp_fifteen"
                android:layout_marginTop="@dimen/dp_fifteen"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="@dimen/dp_seventy"
                        android:layout_height="@dimen/dp_seventy"
                        android:background="@drawable/white_bg">

                        <com.takeout.client.view.RoundCornerImageView
                            android:id="@+id/search_dialog_icon"
                            android:layout_width="@dimen/dp_sixty_five"
                            android:layout_height="@dimen/dp_sixty_five"
                            android:layout_centerInParent="true"
                            android:scaleType="centerCrop"
                            android:src="@mipmap/collect_icon" />
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_eight"
                        android:layout_marginTop="@dimen/dp_two"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/search_dialog_shop_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="多娜之"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/sp_twenty_five" />

                        <TextView
                            android:id="@+id/search_dialog_shop_address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:layout_marginBottom="@dimen/dp_one"
                            android:layout_marginLeft="@dimen/dp_five"
                            android:text="-大安店"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/sp_fourteen" />
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/search_dialog_shop_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_fifteen"
                    android:lineSpacingExtra="@dimen/dp_five"
                    android:maxLines="2"
                    android:text="7/26地球環保節 大杯飲料買一送一"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/sp_fifteen" />
            </LinearLayout>

            <TextView
                android:id="@+id/search_dialog_shop_information"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginBottom="@dimen/dp_five"
                android:layout_marginLeft="@dimen/dp_five"
                android:padding="@dimen/dp_ten"
                android:text="@string/collect_shop_information"
                android:textColor="@android:color/white"
                android:textSize="@dimen/sp_sixteen" />

            <Button
                android:id="@+id/search_dialog_collect"
                android:layout_width="@dimen/dp_ninety"
                android:layout_height="@dimen/dp_twenty_eight"
                android:layout_gravity="bottom|right"
                android:layout_marginBottom="@dimen/dp_ten"
                android:layout_marginRight="@dimen/dp_hundred_twle"
                android:background="@drawable/btn_trans_bg"
                android:text="@string/main_tab_collect"
                android:textColor="@android:color/white"
                android:textSize="@dimen/sp_fifteen" />

            <Button
                android:id="@+id/search_dialog_shop_menu"
                android:layout_width="@dimen/dp_ninety"
                android:layout_height="@dimen/dp_twenty_eight"
                android:layout_gravity="bottom|right"
                android:layout_marginBottom="@dimen/dp_ten"
                android:layout_marginRight="@dimen/dp_fifteen"
                android:background="@drawable/btn_blue_bg"
                android:text="@string/collect_menu"
                android:textColor="@android:color/white"
                android:textSize="@dimen/sp_fifteen" />
        </FrameLayout>
    </FrameLayout>
</FrameLayout>
