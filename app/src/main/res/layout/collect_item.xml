<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_two_hundred_tens"
    android:paddingLeft="@dimen/dp_nineteen"
    android:paddingRight="@dimen/dp_nineteen"
    android:paddingTop="@dimen/dp_eighteen">

    <com.takeout.client.view.RoundCornerImageView
        android:id="@+id/collect_item_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@mipmap/collect_bg" />

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/cover" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_seveneen"
        android:layout_marginRight="@dimen/dp_fifteen"
        android:layout_marginTop="@dimen/dp_fifteen"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RelativeLayout
                android:layout_width="@dimen/dp_seventy"
                android:layout_height="@dimen/dp_seventy"
                android:background="@drawable/white_bg">
                <com.takeout.client.view.RoundCornerImageView
                    android:id="@+id/collect_item_icon"
                    android:layout_width="@dimen/dp_sixty_five"
                    android:layout_height="@dimen/dp_sixty_five"
                    android:scaleType="fitXY"
                    android:layout_centerInParent="true"
                    android:src="@mipmap/merchant_img" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_eight"
                android:layout_marginTop="@dimen/dp_two"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/collect_item_shop_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="多娜之"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/sp_twenty" />

                <TextView
                    android:id="@+id/collect_item_shop_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="@dimen/dp_five"
                    android:text=" -大安店"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/sp_thirteen" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/collect_item_shop_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_seveneen"
            android:ellipsize="end"
            android:lineSpacingExtra="@dimen/dp_five"
            android:singleLine="true"
            android:text="法式卡布奇諾熱賣中，買百即可外送"
            android:textColor="@android:color/white"
            android:textSize="@dimen/sp_fifteen" />
    </LinearLayout>

    <TextView
        android:id="@+id/collect_item_shop_information"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="@dimen/dp_twelve"
        android:layout_marginLeft="@dimen/dp_seveneen"
        android:text="@string/collect_shop_information"
        android:textColor="@android:color/white"
        android:textSize="@dimen/sp_sixteen" />

    <Button
        android:id="@+id/collect_item_shop_menu"
        android:layout_width="@dimen/dp_eighty"
        android:layout_height="@dimen/dp_twenty_four"
        android:layout_gravity="bottom|right"
        android:layout_marginBottom="@dimen/dp_ten"
        android:layout_marginRight="@dimen/dp_fifteen"
        android:background="@drawable/btn_blue_bg"
        android:text="@string/collect_menu"
        android:textColor="@android:color/white"
        android:textSize="@dimen/sp_fourteen" />

</FrameLayout>
