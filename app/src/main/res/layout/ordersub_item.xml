<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/ordersub_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="烏龍紅茶"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_eighteen"/>
            <TextView
                android:id="@+id/ordersub_norm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="大碗"
                android:textColor="@color/black"
                android:paddingLeft="@dimen/dp_eight"
                android:textSize="@dimen/sp_eighteen"/>
        </LinearLayout>
        <TextView
            android:id="@+id/ordersub_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="X1"
            android:textColor="@color/black"
            android:layout_alignParentRight="true"
            android:textSize="@dimen/sp_eighteen"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/ordersub_add_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="X1"
        android:lineSpacingExtra="3dip"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="@dimen/dp_twenty"
        android:textColor="@color/black_two"
        android:textSize="@dimen/sp_fifteen"/>
</LinearLayout>
