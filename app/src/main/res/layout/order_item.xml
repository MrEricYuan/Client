<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/dp_fifteen"
    android:layout_marginRight="@dimen/dp_fifteen"
    android:layout_marginTop="@dimen/dp_five"
    android:background="@drawable/menu_bg"
    android:orientation="vertical"
    android:paddingTop="@dimen/dp_five">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_fifty_five"
        android:layout_marginTop="@dimen/dp_eight">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_ten"
            android:layout_marginRight="@dimen/dp_eight"
            android:orientation="horizontal">
            <RelativeLayout
                android:layout_width="@dimen/dp_fifty_five"
                android:layout_height="@dimen/dp_fifty_five"
                android:background="@drawable/white_bg">
                <ImageView
                    android:layout_width="@dimen/dp_fifty"
                    android:layout_height="@dimen/dp_fifty"
                    android:layout_centerInParent="true"
                    android:src="@drawable/btn_blue_bg" />
            </RelativeLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:text="五十嵐"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_twenty_five" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:text="  -敦化店"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_thirteen" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="24dip"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="@dimen/dp_eight"
            android:layout_marginRight="@dimen/dp_eight"
            android:background="@drawable/button_bg"
            android:gravity="center"
            android:paddingLeft="@dimen/dp_one"
            android:paddingRight="@dimen/dp_two"
            android:text="目前叫號S010"
            android:textColor="@color/black_one"
            android:textSize="@dimen/sp_thirteen" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_twelve"
            android:layout_marginTop="@dimen/dp_five"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="S012"
                android:textColor="@color/text_blue"
                android:textSize="@dimen/sp_twenty_four" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_eight"
                android:text="元先生"
                android:textSize="@dimen/sp_twelve" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" - 23分鐘前"
                android:textSize="@dimen/sp_twelve" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_eight"
            android:text="外帶"
            android:textColor="@color/black_one"
            android:textSize="@dimen/sp_twenty_four" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_ten"
        android:layout_marginRight="@dimen/dp_ten"
        android:background="@drawable/menu_bg"
        android:orientation="vertical">

        <ListView
            android:id="@+id/order_menu_lv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_five"
            android:layout_marginRight="@dimen/dp_eight"
            android:layout_marginTop="@dimen/dp_five"
            android:divider="@android:color/transparent"
            android:dividerHeight="@dimen/dp_two"
            android:listSelector="@android:color/transparent"
            android:visibility="visible" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/dp_five"
            android:text="總計:310元"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_eighteen" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_three"
        android:layout_marginRight="@dimen/dp_twelve"
        android:layout_marginLeft="@dimen/dp_ten"
        android:layout_marginBottom="@dimen/dp_five">

        <TextView
            android:id="@+id/order_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_five"
            android:gravity="center"
            android:text="剩餘27分鐘"
            android:textColor="@color/gray_color1"
            android:textSize="@dimen/sp_thirteen"
            android:visibility="gone" />

        <TextView
            android:id="@+id/order_state_tv"
            android:layout_width="@dimen/dp_ninety"
            android:layout_height="@dimen/dp_twenty_five"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:layout_marginTop="@dimen/dp_five"
            android:background="@drawable/select_bg"
            android:gravity="center"
            android:text="處理中"
            android:textSize="@dimen/sp_fourteen" />

    </RelativeLayout>
</LinearLayout>
