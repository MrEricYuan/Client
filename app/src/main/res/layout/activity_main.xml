    <FrameLayout
        android:id="@+id/main_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_fifty_six"
        android:layout_alignParentBottom="true">

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dip"
            android:background="@color/divider" />

        <RadioGroup
            android:id="@+id/main_tabs"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dp_ten"
            android:paddingRight="@dimen/dp_ten"
            android:background="#E5FFFFFF"
            android:weightSum="4">

            <RadioButton
                android:id="@+id/main_tab_collect"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:button="@null"
                android:drawableTop="@drawable/tab_collect"
                android:gravity="center"
                android:singleLine="true"
                android:text="@string/main_tab_collect"
                android:textColor="@color/tab_text"
                android:textSize="@dimen/sp_thirteen" />

            <RadioButton
                android:id="@+id/main_tab_order"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:button="@null"
                android:drawableTop="@drawable/tab_order"
                android:gravity="center"
                android:singleLine="true"
                android:text="@string/main_tab_order"
                android:textColor="@color/tab_text"
                android:textSize="@dimen/sp_thirteen" />

            <RadioButton
                android:id="@+id/main_tab_search"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:button="@null"
                android:drawableTop="@drawable/tab_search"
                android:gravity="center"
                android:singleLine="true"
                android:text="@string/main_tab_search"
                android:textColor="@color/tab_text"
                android:textSize="@dimen/sp_thirteen" />

            <RadioButton
                android:id="@+id/main_tab_user"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:button="@null"
                android:drawableTop="@drawable/tab_user"
                android:gravity="center"
                android:singleLine="true"
                android:text="@string/main_tab_user"
                android:textColor="@color/tab_text"
                android:textSize="@dimen/sp_thirteen" />

        </RadioGroup>
    </FrameLayout>
</LinearLayout>
